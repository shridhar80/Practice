@using CrudUsingMvc.Models;
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Index";
}
<h2>Product List : </h2>
<div><a href="/products/insert">Insert</a></div>
<table class="table">
    <thead>
        <tr>
            <th>
                <label>Id</label>
            </th>
            <th>
                <label>Name</label>
            </th>
            <th> </th>
        </tr>
    </thead>
    <tbody>

        @{
            List<Product> list = (List<Product>)ViewData["products"];
        }
        @foreach (var item in list)
        {
            <tr>
                <td>
                    <p> @item.Id</p>
                </td>
                <td>
                    <p> @item.Name</p>
                </td>
                <td>
                    <a href="/Products/details/@item.Id">Details</a> |   <a href="/Products/Update/@item.Id">Update</a>  |   <a href="/Products/remove/@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
