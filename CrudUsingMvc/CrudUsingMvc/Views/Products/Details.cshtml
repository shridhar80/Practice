@{
    ViewData["title"] = "Details";
}
<h2>Product Details</h2>

@{
    int productId = (int)ViewData["id"];
    string productName = (string)ViewData["name"];
    decimal productPrice = (decimal)ViewData["price"];
}

<p> Id: @productId</p>
<p>Name: @productName</p>
<p> Price: @productPrice</p>