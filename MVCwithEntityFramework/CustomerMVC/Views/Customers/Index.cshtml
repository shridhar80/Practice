@{
}
<h1>Index</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                <label>Id</label>
            </th>
            <th>
                <label>Name</label>
            </th>
            <th>
                <label>Email</label>
            </th>
            <th>
                <label>Phone</label>
            </th>
        </tr>
    </thead>
    <tbody>

        @{
            List<Customer> allCustomer = (List<Customer>)ViewData["allCustomers"];
        }
        @foreach (var item in allCustomer)
        {
            <tr>
                <td>
                    <p> @item.Id</p>
                </td>
                <td>
                    <p> @item.Name</p>
                </td>
                <td>
                    <p> @item.Email</p>
                </td>
                <td>
                    <p> @item.Phone</p>
                </td>
            </tr>
        }
    </tbody>
</table>